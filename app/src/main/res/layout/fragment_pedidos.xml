<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A3167"
    tools:context=".ui.Pedidos.PedidosFragment">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-smallcaps"
        android:paddingTop="10dp"
        android:text="PEDIDOS"
        android:textAlignment="center"
        android:textSize="48sp"
        android:visibility="visible" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:elevation="15dp"
        app:cardBackgroundColor="#473D7B">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0"
                    android:text="ID:"
                    android:textAlignment="textEnd"
                    android:textColor="#FCC37E"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/ID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:text="@string/time"
                    android:textColor="#FCC37E"
                    android:textSize="34sp" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0"
                android:text="Hora aproximada de entrega:"
                android:textColor="#FCC37E"
                android:textSize="24sp" />


            <TextView
                android:id="@+id/fragment_pedidos_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="@string/time"
                android:textAlignment="center"
                android:textColor="#FCC37E"
                android:textSize="48sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="334dp"
                android:layout_height="360dp"
                android:layout_gravity="clip_vertical|center_horizontal"
                app:srcCompat="@drawable/pizzabailando" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="15dp"
                android:fontFamily="sans-serif-smallcaps"
                android:paddingTop="12dp"
                android:text="GRACIAS POR SU COMPRAS ðŸ˜ŽðŸ˜Ž"
                android:textAlignment="center"
                android:textColor="#FBC27E"
                android:textSize="34sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>